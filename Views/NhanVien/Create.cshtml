@model QL_KhachSan.tblNhanVien
@{ ViewBag.Title = "Thêm Nhân Viên"; }

<div class="card shadow mt-4 col-md-8 mx-auto">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0"><i class="fas fa-user-plus"></i> Thêm Nhân Viên Mới</h4>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="mb-3">
                    <label class="fw-bold">Tên đăng nhập</label>
                    @Html.EditorFor(model => model.TenDangNhap, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="fw-bold">Mật khẩu</label>
                    @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="fw-bold">Họ tên nhân viên</label>
                    @Html.EditorFor(model => model.TenNV, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="mb-3">
                    <label class="fw-bold">Chức vụ</label>
                    @Html.DropDownList("VaiTro", null, htmlAttributes: new { @class = "form-select" })
                </div>

                <div class="text-end">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
                    <button type="submit" class="btn btn-primary">Lưu lại</button>
                </div>
            </div>
        }
    </div>
</div>