@model IEnumerable<QL_KhachSan.tblNhanVien>
@{ ViewBag.Title = "Quản lý nhân viên"; }

<div class="d-flex justify-content-between align-items-center mb-3 mt-3">
    <h3 class="text-danger fw-bold"><i class="fas fa-users-cog"></i> Danh Sách Nhân Viên</h3>
    <a href="@Url.Action("Create")" class="btn btn-primary"><i class="fas fa-plus"></i> Thêm Mới</a>
</div>

<table class="table table-bordered table-hover shadow-sm bg-white">
    <thead class="table-dark">
        <tr>
            <th>Họ Tên</th>
            <th>Tài Khoản</th>
            <th>Chức Vụ</th>
            <th>SĐT</th>
            <th>Trạng Thái</th>
            <th>Thao Tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenNV</td>
                <td>@item.TenDangNhap</td>
                <td>
                    @if (item.VaiTro == 1)
                    {<span class="badge bg-danger">Admin</span> }
                    else if (item.VaiTro == 2)
                    { <span class="badge bg-success">Lễ tân</span> }
                    else
                    { <span class="badge bg-secondary">Tạp vụ</span>}
                </td>
                <td>@item.SDT</td>
                <td>
                    @(item.TrangThai == true ? Html.Raw("<span class='text-success'><i class='fas fa-check-circle'></i> Hoạt động</span>") : Html.Raw("<span class='text-muted'>Đã khóa</span>"))
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.MaNV })" class="btn btn-sm btn-outline-warning">
                        <i class="fas fa-edit"></i> Sửa
                    </a>

                    <a href="@Url.Action("Delete", new { id = item.MaNV })"
                       class="btn btn-sm btn-outline-danger"
                       onclick="return confirm('Bạn có chắc chắn muốn xóa nhân viên này?')">
                        <i class="fas fa-trash"></i> Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>