@model QL_KhachSan.tblHoaDon

@{
    ViewBag.Title = "Đặt Phòng Mới";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow mt-4">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0 fw-bold"><i class="fas fa-key"></i> Phiếu Nhận Phòng (Check-in)</h4>
            </div>
            <div class="card-body p-4">
                @using (Html.BeginForm()) 
                {
                    @Html.AntiForgeryToken()
                    
                    <div class="mb-3">
                        <label class="fw-bold">Khách Hàng</label>
                        <div class="input-group">
                            @Html.DropDownList("MaKH", null, "--- Chọn khách hàng ---", new { @class = "form-select" })
                            <a href="/tblKhachHangs/Create" class="btn btn-outline-secondary" title="Thêm khách mới"><i class="fas fa-plus"></i></a>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold text-success">Chọn Phòng Trống</label>
                        @Html.DropDownList("MaPhong", null, "--- Chọn phòng ---", new { @class = "form-select form-select-lg" })
                        <small class="text-muted fst-italic">* Giá hiển thị là giá niêm yết theo ngày.</small>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">Ghi chú (Nếu có)</label>
                        @Html.TextAreaFor(model => model.GhiChu, new { @class = "form-control", rows = 3, placeholder = "VD: Khách check-in sớm, khách VIP..." })
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
                        <button type="submit" class="btn btn-success px-4 fw-bold">
                            <i class="fas fa-check-circle"></i> Xác Nhận Check-in
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>