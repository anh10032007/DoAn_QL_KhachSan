@model QL_KhachSan.tblKhachHang

@{
    ViewBag.Title = "Cập Nhật Thông Tin";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow border-0 mt-4">
            <div class="card-header bg-warning text-dark py-3">
                <h4 class="mb-0 fw-bold"><i class="fas fa-user-edit"></i> Cập Nhật Thông Tin Khách Hàng</h4>
            </div>

            <div class="card-body p-4">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.MaKH) <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Họ tên</label>
                                @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger small" })
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">CCCD/CMND</label>
                                @Html.EditorFor(model => model.CCCD, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CCCD, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Giới tính</label>
                                @Html.DropDownListFor(model => model.GioiTinh, new List<SelectListItem>
                                {
                                    new SelectListItem { Text = "Nam", Value = "Nam" },
                                    new SelectListItem { Text = "Nữ", Value = "Nữ" },
                                    new SelectListItem { Text = "Khác", Value = "Khác" }
                                }, "Chọn giới tính", new { @class = "form-select" })
                                @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger small" })
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Năm sinh</label>
                                @Html.EditorFor(model => model.NamSinh, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Số điện thoại</label>
                                @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Email</label>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Địa chỉ</label>
                            @Html.TextAreaFor(model => model.DiaChi, new { @class = "form-control", rows = 2 })
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Mật khẩu (Online)</label>
                            @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <hr />
                        <div class="d-flex justify-content-end gap-2">
                            <a href="@Url.Action("Index")" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Hủy</a>
                            <button type="submit" class="btn btn-warning px-4 fw-bold"><i class="fas fa-save"></i> Lưu Thay Đổi</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts { @Scripts.Render("~/bundles/jqueryval") }