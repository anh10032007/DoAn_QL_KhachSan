@model IEnumerable<QL_KhachSan.tblNhatKyHoatDong>

@{
    ViewBag.Title = "Nhật Ký Hệ Thống";
}

<div class="card shadow mt-4">
    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="fas fa-history"></i> Nhật Ký Hoạt Động</h4>
        <span class="badge bg-secondary">@Model.Count() bản ghi</span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Thời gian</th>
                        <th>Người thực hiện</th>
                        <th>Hành động</th>
                        <th>Chi tiết / Ghi chú</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-nowrap">@string.Format("{0:dd/MM/yyyy HH:mm:ss}", item.ThoiGian)</td>
                            <td class="fw-bold text-primary">
                                @* Kiểm tra null tránh lỗi nếu nhân viên đã bị xóa *@
                                @(item.tblNhanVien != null ? item.tblNhanVien.TenNV : "Unknown ID: " + item.MaNV)
                            </td>
                            <td>
                                @if (item.HanhDong.Contains("Thêm"))
                                {
                                    <span class="badge bg-success">@item.HanhDong</span>
                                }
                                else if (item.HanhDong.Contains("Xóa"))
                                {
                                    <span class="badge bg-danger">@item.HanhDong</span>
                                }
                                else
                                {
                                    <span class="badge bg-info text-dark">@item.HanhDong</span>
                                }
                            </td>
                            <td>@item.GhiChu</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>