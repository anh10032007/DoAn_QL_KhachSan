@model QL_KhachSan.tblPhong

@{
    ViewBag.Title = "Thêm Phòng Mới";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow border-0 mt-4">
            <div class="card-header bg-primary text-white py-3">
                <h4 class="mb-0 fw-bold"><i class="fas fa-plus-circle"></i> Thêm Phòng Mới</h4>
            </div>

            <div class="card-body p-4">
                @using (Html.BeginForm("Create", "Phong", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Số Phòng <span class="text-danger">*</span></label>

                                @Html.EditorFor(model => model.SoPhong, new { htmlAttributes = new { @class = "form-control" } })

                                @* Dòng này sẽ hiển thị lỗi trùng phòng *@
                                @Html.ValidationMessageFor(model => model.SoPhong, "", new { @class = "text-danger small fw-bold" })
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Tầng <span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.Tang, new { htmlAttributes = new { @class = "form-control", type = "number", min = "1" } })
                                @Html.ValidationMessageFor(model => model.Tang, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Loại Phòng</label>
                                @Html.DropDownList("MaLoai", null, "--- Chọn loại phòng ---", htmlAttributes: new { @class = "form-select" })
                                @Html.ValidationMessageFor(model => model.MaLoai, "", new { @class = "text-danger small" })
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Ảnh đại diện</label>
                                <input type="file" name="HinhAnh" class="form-control" accept="image/*" />
                                @Html.ValidationMessageFor(model => model.AnhDaiDien, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Mô tả tiện nghi</label>
                            @Html.TextAreaFor(model => model.MoTaChiTiet, new { @class = "form-control", rows = 3, placeholder = "VD: Hướng biển, có bồn tắm, 2 giường đơn..." })
                            @Html.ValidationMessageFor(model => model.MoTaChiTiet, "", new { @class = "text-danger small" })
                        </div>

                        <div class="alert alert-info py-2">
                            <i class="fas fa-info-circle"></i> Trạng thái phòng mới sẽ mặc định là <strong>"Trống"</strong>.
                        </div>

                        <hr />

                        <div class="d-flex justify-content-end gap-2">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-success px-4 fw-bold">
                                <i class="fas fa-save"></i> Lưu Phòng Mới
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}