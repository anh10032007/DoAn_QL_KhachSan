@{
    ViewBag.Title = "Trang Chủ - Dashboard";
    int vt = Session["VaiTro"] != null ? Convert.ToInt32(Session["VaiTro"]) : 0;
}

<div class="d-flex justify-content-between align-items-center mb-4 mt-2">
    <div>
        <h2 class="mb-0 text-primary"><i class="fas fa-tachometer-alt"></i> Tổng Quan Khách Sạn</h2>
        <p class="text-muted mb-0">Xin chào, <strong>@Session["TenHienThi"]</strong>! Chúc bạn một ngày làm việc hiệu quả.</p>
    </div>
    <div class="text-end">
        <h5 class="mb-0" id="liveClock">00:00:00</h5>
        <small class="text-muted">@DateTime.Now.ToString("dd/MM/yyyy")</small>
    </div>
</div>

<div class="row g-3 mb-4">
    @* Các thẻ thống kê số liệu *@
    <div class="col-md-3">
        <div class="card bg-primary text-white h-100 shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="card-title text-uppercase mb-0">Đang Có Khách</h6>
                    <h2 class="my-2 display-6 fw-bold">@ViewBag.SoPhongDangO</h2>
                    <small>Phòng đang thuê</small>
                </div>
                <i class="fas fa-bed fa-3x opacity-50"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-success text-white h-100 shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="card-title text-uppercase mb-0">Phòng Trống</h6>
                    <h2 class="my-2 display-6 fw-bold">@ViewBag.SoPhongTrong</h2>
                    <small>Sẵn sàng đón khách</small>
                </div>
                <i class="fas fa-door-open fa-3x opacity-50"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-info text-white h-100 shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="card-title text-uppercase mb-0">Khách Mới</h6>
                    <h2 class="my-2 display-6 fw-bold">@ViewBag.CheckInHomNay</h2>
                    <small>Lượt check-in hôm nay</small>
                </div>
                <i class="fas fa-user-check fa-3x opacity-50"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-warning text-dark h-100 shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="card-title text-uppercase mb-0">Doanh Thu Ngày</h6>
                    <h3 class="my-2 fw-bold">@string.Format("{0:N0}", ViewBag.DoanhThuHomNay)</h3>
                    <small>VNĐ (Đã thanh toán)</small>
                </div>
                <i class="fas fa-sack-dollar fa-3x opacity-50"></i>
            </div>
        </div>
    </div>
</div>

<div class="row">
    @* PHẦN CHỨC NĂNG THƯỜNG DÙNG ĐÃ ĐƯỢC PHÂN QUYỀN *@
    <div class="col-md-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold"><i class="fas fa-rocket text-danger"></i> Chức Năng Thường Dùng</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    @* Nút Sơ Đồ Phòng: Dùng chung cho tất cả các vai trò *@
                    <div class="col-4 mb-3">
                        <a href="@Url.Action("Index", "Phong")" class="btn btn-outline-primary w-100 py-3">
                            <i class="fas fa-th mb-2 fa-2x"></i><br>Sơ Đồ Phòng
                        </a>
                    </div>

                    @if (vt == 3)
                    {
                        @* CHẾ ĐỘ HIỂN THỊ CHO TẠP VỤ: Hiện nút Dọn dẹp, ẩn Check-in/Hóa đơn *@
                        <div class="col-8 mb-3">
                            <a href="@Url.Action("Index", "TapVu")" class="btn btn-outline-success w-100 py-3">
                                <i class="fas fa-broom mb-2 fa-2x"></i><br>Công Việc Dọn Dẹp
                            </a>
                        </div>
                    }
                    else
                    {
                        @* CHẾ ĐỘ HIỂN THỊ CHO LỄ TÂN/ADMIN *@
                        <div class="col-4 mb-3">
                            <a href="@Url.Action("Create", "HoaDon")" class="btn btn-outline-success w-100 py-3">
                                <i class="fas fa-key mb-2 fa-2x"></i><br>Check-in Khách
                            </a>
                        </div>
                        <div class="col-4 mb-3">
                            <a href="@Url.Action("Index", "HoaDon")" class="btn btn-outline-danger w-100 py-3">
                                <i class="fas fa-file-invoice-dollar mb-2 fa-2x"></i><br>Trả Phòng / Hóa Đơn
                            </a>
                        </div>
                    }

                    @* Các nút bổ sung chỉ dành cho Admin (Vai trò 1) *@
                    @if (vt == 1)
                    {
                        <div class="col-4">
                            <a href="@Url.Action("Create", "NhanVien")" class="btn btn-outline-secondary w-100 py-3">
                                <i class="fas fa-user-plus mb-2 fa-2x"></i><br>Thêm Nhân Viên
                            </a>
                        </div>
                        <div class="col-4">
                            <a href="@Url.Action("BaoCao", "Admin")" class="btn btn-outline-dark w-100 py-3">
                                <i class="fas fa-chart-line mb-2 fa-2x"></i><br>Xem Báo Cáo
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @* PHẦN LƯU Ý HỆ THỐNG *@
    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold"><i class="fas fa-bell text-warning"></i> Lưu Ý Hệ Thống</h5>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    @* Thông báo dọn dẹp rất quan trọng với nhân viên tạp vụ *@
                    @if (ViewBag.SoPhongDon > 0)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center text-danger">
                            <span><i class="fas fa-exclamation-circle me-2"></i> Có <strong>@ViewBag.SoPhongDon</strong> phòng cần dọn dẹp!</span>
                        </li>
                    }
                    else
                    {
                        <li class="list-group-item text-success">
                            <i class="fas fa-check-circle me-2"></i> Tất cả phòng đều sạch sẽ.
                        </li>
                    }
                    <li class="list-group-item text-muted small">
                        Vui lòng kiểm tra kỹ CCCD của khách trước khi làm thủ tục nhận phòng.
                    </li>
                    <li class="list-group-item text-muted small">
                        Ca trực hiện tại: <strong>@Session["TenHienThi"]</strong>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        function updateClock() {
            var now = new Date();
            var hours = String(now.getHours()).padStart(2, '0');
            var minutes = String(now.getMinutes()).padStart(2, '0');
            var seconds = String(now.getSeconds()).padStart(2, '0');
            document.getElementById('liveClock').textContent = hours + ":" + minutes + ":" + seconds;
        }
        setInterval(updateClock, 1000);
        updateClock();
    </script>
}